<%- include('partials/header.ejs') %>
    <main>
        <a href="create">Create a profile</a>
        <a href="filter">Search a profile</a>
        <table>
            <thead>
                <tr>
                    <th>First name</th>
                    <th>Sex</th>
                </tr>
            </thead>
            <tbody>
                <% for(i=0; i < list.length; i++){ %>
                    <tr>
                        <td><%= list[i].firstname; %></td>
                        <td><%= list[i].sex; %></td>
                        <td><a href="edit/<%= list[i]._id %>">edit</a></td>
                        <td><a href="delete/<%= list[i]._id %>">delete</a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </main>
    <%- include('partials/footer.ejs') %>