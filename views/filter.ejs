<%- include('partials/header.ejs') %>
    <main>
        <form action="/" method="POST">
            <div>
                <p>Interested in</p>
                <% for(i=0; i < data.interests.length; i++){ %>
                    <div class="radio-group">
                        <input type="radio" id="<%= data.interests[i].toLowerCase(); %>" name="interest"
                            value="<%= data.interests[i].toLowerCase(); %>">
                        <label for="<%= data.interests[i].toLowerCase(); %>">
                            <%= data.interests[i] %>
                        </label>
                    </div>
                    <% } %>
            </div>
            <div>
                <label for="min-age">Age</label>
                <input type="number" id="min-age" name="min-age" min="18" class="inline">
                <label for="max-age" class="inline">to</label>
                <input type="number" id="max-age" name="max-age" max="130" class="inline">
            </div>
            <div>
                <label for="religion-select">Religion</label>
                <select name="religion" id="religion-select">
                    <option>Select a religion</option>
                    <% for(i=0; i < data.religions.length; i++){ %>
                        <option value="<%= data.religions[i].toLowerCase(); %>">
                            <%= data.religions[i] %>
                        </option>
                        <% } %>
                </select>
            </div>
            <div>
                <label for="living-distance">Living distance</label>
                <input type="number" name="living-distance" id="living-distance">
            </div>
            <div>
                <label for="place">Place</label>
                <input type="search" id="place" name="place">
            </div>
            <div>
                <label for="hobbies">Hobbies</label>
                <input type="search" id="hobbies" name="hobbies">
                <button id="add-hobby">+</button>
            </div>
            <input type="submit" value="Search">
        </form>
    </main>
    <%- include('partials/footer.ejs') %>
    